#!/bin/bash

# Snickerstream Flatpak Launcher
# Launches the Python version of Snickerstream

set -e

# Set up environment
SNICKERSTREAM_DIR="/app/share/snickerstream"

# Check if Python script exists
if [ -f "/app/bin/snickerstream" ]; then
    echo "Starting Snickerstream..."
    exec python3 /app/bin/snickerstream "$@"
else
    echo "Error: Snickerstream Python script not found at /app/bin/snickerstream"
    echo "Please ensure the application is properly installed"
    exit 1
fi